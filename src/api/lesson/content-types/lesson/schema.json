{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "benefits": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::benefit.benefit"
    },
    "reading_time": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "free": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": true
    },
    "lesson_icon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "tasks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::task.task",
      "mappedBy": "lesson"
    },
    "content_images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "content_text": {
      "type": "richtext"
    },
    "sources": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::source.source"
    },
    "lesson_preview": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
